{
  "namespace": "crafting",
//thing you need to edit
  "crafting_screen": {
    "modifications": [
		{
			"array_name": "controls",
			"operation": "insert_back",
			"value": {
				//you custom crafting ui
				"custom_crafting_panel@cf.final_panel":{} //in custom craft file (namespace.final_panel)
			}
		},
		{
			"array_name": "controls",
			"operation": "insert_back",
			"value": {
				"normal_screen@crafting.recipe_inventory_screen_content":{
				"bindings": [
					{
					"binding_name": "#crafting_label_text",
					"binding_type": "global"
					},
					{
					"binding_type": "view",
					"source_property_name": "(not (#crafting_label_text = 'custom_craft'))", //Your custom crafting table name
					"target_property_name": "#visible" 
					}
				]
				}
			}
		}
	]	
  }
}
